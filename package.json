{
  "name": "todo-with-api",
  "version": "1.0.0",
  "main": "index.js",
  "watch": {
    "eslint": {
      "patterns": [
        "./src/"
      ],
      "extensions": "js",
      "quiet": false
    },
    "stylelint": {
      "patterns": [
        "./src/"
      ],
      "extensions": "css",
      "quiet": false
    }
  },
  "scripts": {
    "start": "npx concurrently -n watch,server,api \"npm run watch\" \"npm run server\" \"npm run api\"",
    "server": "node ./node_modules/live-server/live-server.js --watch=src --port=5000",
    "api": "node server-api",
    "stylelint": "node ./node_modules/stylelint/bin/stylelint.js \"src/**/*.css\"",
    "eslint": "node ./node_modules/eslint/bin/eslint.js \"src/**/*.js\"",
    "watch": "node ./node_modules/npm-watch/cli.js",
    "scss": "npx sass \"./src/styles/style.scss\"  \"./src/styles/style.css\""
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "4.18.2",
    "live-server": "1.2.2",
    "npm-watch": "0.11.0",
    "prettier": "2.8.8",
    "stylelint": "15.9.0",
    "stylelint-config-standard": "33.0.0",
    "sass": "^1.63.6"
  },
  "dependencies": {
  }
}
