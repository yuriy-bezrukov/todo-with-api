{
  "name": "todo-with-api",
  "version": "1.0.0",
  "main": "index.js",
  "watch": {
    "eslint": {
      "patterns": [
        "./src/"
      ],
      "extensions": "js",
      "quiet": false
    },
    "stylelint": {
      "patterns": [
        "./src/"
      ],
      "extensions": "css",
      "quiet": false
    },
    "scss": {
      "patterns": [
        "./src/"
      ],
      "extensions": "scss",
      "quiet": false
    }
  },
  "scripts": {
    "start": "npx concurrently 'npm:watch' 'npm:server' 'npm:api'",
    "server": "node ./node_modules/live-server/live-server.js --watch=src --port=5000",
    "api": "node server-api",
    "stylelint": "node ./node_modules/stylelint/bin/stylelint.js \"src/**/*.scss\"",
    "eslint": "node ./node_modules/eslint/bin/eslint.js \"src/**/*.js\"",
    "scss": "npx sass \"./src/styles\":\"./src/styles\"",
    "watch": "node ./node_modules/npm-watch/cli.js"
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "4.18.2",
    "live-server": "1.2.2",
    "npm-watch": "0.11.0",
    "prettier": "2.8.8",
    "sass": "^1.63.6",
    "stylelint": "15.9.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-scss": "^5.0.1"
  },
  "dependencies": {
  }
}
